<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/teacher/exam.css" />
  <title>
    <%= pageTitle%>
  </title>
</head>

<body>
  <%- include('../includes/nav.ejs') %>
  <div style="position: relative;" class="wrapper">
    <%- include('../includes/message.ejs') %>

    <input type="hidden" value="<%=itemId%>" name="itemId">
    <input type="hidden" value="<%=examType%>" name="type">
    <div id="holders">
      <section class="placeHolder" style="height: 300px;">
        <article class="background">
          <div class="a"></div>
          <div class="b"></div>
          <div class="c"></div>
          <div class="d"></div>
          <div class="e"></div>
          <div class="f"></div>
          <div class="g"></div>
          <div class="h"></div>
          <div class="i"></div>
          <div class="j"></div>
          <div class="k"></div>
          <div class="l"></div>
        </article>
      </section>
      <section class="placeHolder">
        <article class="background">
          <div class="g"></div>
          <div class="h"></div>
          <div class="i"></div>
          <div class="j"></div>
          <div class="k"></div>
          <div class="l"></div>
        </article>
      </section>
    </div>
    <div class="header" style="opacity:0;">
      <div class="header-header p-relative">
        <div class="header-info">

        </div>
        <div class="header-actions">
          <a class="p-3  toggle-settings"> الاعدادات</a>
          <a class="p-3  toggle-analytics">تحليل الامتحان</a>
        </div>

        <form action="/teacher/exam/settings/<%=itemId%>?examType=<%=examType%>" method="POST"
          class="settings external-box none">
          <h2>الاعدادات</h2>
          <i class="fas fa-times close toggle-settings"></i>
          <div class="">
            <h4>اضف اسم:</h4>
            <div class="form-group">
              <label for="name">الأسم</label>
              <input class="form-control" type="text" name="name" id="name">
            </div>
          </div>
          <div class="">
            <h4>اضف عداد</h4>
            <div class="form-group">
              <label for="min">الدقائق</label>
              <input class="form-control" type="number" name="min" min="1" id="min">
            </div>
          </div>

          <button type="submit" class="btn btn-success">حفظ</button>
        </form>
        <div id="NewQuestionForm" class="dynamic-tabs position-absolute none">
          <span class="text-dark float-right mr-1 mt-1" id="closeQuestionForm">
            <i class="fas fa-times "></i>
          </span>
          <ul class="tabs-list">
            <li data-questionType='choose' data-content="content-one">
              <button class="btn-main active">اختياري</button>
            </li>
            <li data-questionType='paragraph' data-content="content-three">
              <button class="btn-main">قطعه</button>
            </li>
            <li data-questionType='truefalse' data-content="content-four">
              <button class="btn-main">صح/خطأ</button>
            </li>
            <li data-questionType='written' data-content="content-two">
              <button class="btn-main">يدوي</button>
            </li>
          </ul>
          <div class="content-list">
            <div data-tab-content="content-one" class="content-one">
              <div class="form-group questionPreview">
                <div data-id="questionText" class="questionsInputs inputActive form-control">
                  السؤال
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="answerone" class="questionsInputs form-control">
                  الاجابه الاولي
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="answertwo" class="questionsInputs form-control">
                  الاجابه الثانيه
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="answerthree" class="questionsInputs form-control">
                  الاجابه الثالثه
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="answerfour" class="questionsInputs form-control">
                  الاجابه الرابعه
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="correctAnswer" class="questionsInputs form-control">
                  رقم الاجابه الصحيحه
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="image" class="questionsInputs form-control">
                  <input type="file" style="width: 100%;  background: transparent; border: none; height:unset;"
                    class="questionImg" name="questionImg">
                  <i class="fas fa-check-circle"></i>
                </div>
              </div>
            </div>
            <div data-tab-content="content-two" class=" none">
              <div class="form-group questionPreview">
                <div data-id="questionText" class="questionsInputs form-control">
                  السؤال
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="questionScore" class="questionsInputs form-control">
                  نقاط السؤال <span style="font-size:10px">الافتراضي :1</span>
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="image" class="questionsInputs form-control">
                  <input type="file" style="width: 100%;  background: transparent; border: none; height:unset;"
                    class="questionImg" name="questionImg">
                  <i class="fas fa-check-circle"></i>
                </div>
              </div>
            </div>
            <div data-tab-content="content-three" class="content-three none">
              <div class="form-group questionPreview">

                <div data-id="questionText" class="questionsInputs form-control">
                  السؤال
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="questionScore" class="questionsInputs form-control">
                  نقاط السؤال <span style="font-size:10px">الافتراضي:1</span>
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="image" class="questionsInputs form-control">
                  <input type="file" style="width: 100%;  background: transparent; border: none; height:unset;"
                    class="questionImg" name="questionImg">
                  <i class="fas fa-check-circle"></i>
                </div>
              </div>

            </div>
            <div data-tab-content="content-four" class="content-four none">
              <div class="form-group questionPreview">

                <div data-id="questionText" class="questionsInputs form-control">
                  السؤال
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="correctAnswer" class="questionsInputs form-control">
                  الاجابه الصحيحه
                  <i class="fas fa-check-circle"></i>
                </div>
                <div data-id="image" class="questionsInputs form-control">
                  <input type="file" style="width: 100%;  background: transparent; border: none; height:unset;"
                    class="questionImg" name="questionImg">
                  <i class="fas fa-check-circle"></i>
                </div>
              </div>

            </div>
          </div>
          <div id="textFormater" class="container">
            <!-- Create the editor container -->
            <!-- Create toolbar container -->
            <div id="toolbar">
            </div>
            <button class="btn" id="openSymbols">العلامات</button>
            <div id="symbols"></div>
            <div class="editor"></div>
            <div class="textFormater_actions">
              <button class="btn alert-warning" id="addInput">تأكيد</button>
              <button class="submitQuestion confirm-question btn btn-info">حفظ السؤال</button>
            </div>

          </div>
          <div class="question-perview" id="question-perview">
            <div class="question-perview_head">
              <h4 style=" opacity: .7; font-size: 18px;">معاينه السؤال<h4>
                  <div>
                    <p>الاجابه الصحيحه</p><span></span>
                  </div>
            </div>
            <p id="questionText"></p>
            <p class="answerPrev" id="answerone" data-number="1"></p>
            <p class="answerPrev" id="answertwo" data-number="2"></p>
            <p class="answerPrev" id="answerthree" data-number="3"></p>
            <p class="answerPrev" id="answerfour" data-number="4"></p>
            <p class="answerPrev" id="correctanswer"></p>
            <div class="question_preview_image p-relative none">
              <i class="fas fa-trash c-r close remove-img"></i>
              <img src="">
            </div>
          </div>
        </div>
      </div>

      <div class="card-body">
        <i id="addQuestion" class="fas fa-plus-circle "></i>
      </div>

    </div>
    <%- include('./includes/exam-analytics.ejs') %>

  </div>


  <!-- Theme included stylesheets -->
  <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
  <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">

  <!-- Core build with no theme, formatting, non-essential modules -->
  <link href="//cdn.quilljs.com/1.3.6/quill.core.css" rel="stylesheet">
  <script src="//cdn.quilljs.com/1.3.6/quill.core.js"></script>
  <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
  <script src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>


  <!-- Initialize Quill editor -->
  <%- include('../includes/end.ejs') %>
  <script src="/js/teacher/components/exam.js"></script>
  <script src="/js/teacher/components/analytics.js"></script>
  <script src="/js/teacher/exam.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.js"></script>

  <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
  <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />


</body>

</html>