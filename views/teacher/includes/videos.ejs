<div class="content-one " data-tab-content="content-one">
    <div class="flex f-space-between p-4">
        <h2>الفديوهات</h2>
        <% if (user.isTeacher || user.isAssistent){ %>
        <button class="btn btn-success " data-form="newvideo">فيديو جديد
        </button>
        <%}%>
    </div>
    <% if (user.isTeacher || user.isAssistent){ %>
        <div class="fileForm none" id="newvideo">
            <i class="fas fa-times close c-w"  data-form="newvideo"></i>
            <div id="UploadBox">
                <h2 class="p-large">تحميل الفديو</h2>

                <div class="item_inputs_group video-title">
                    <label for="">اسم الفيديو</label>
                    <input class="item_inputs_control form-control" type="text" id="videoTitle">
                </div>
                <div class="item_inputs_group video-title">
                    <label for="">الرابط</label>
                    <input class="item_inputs_control form-control" type="text" id="videoUrl">
                </div>

                <button type='button' id='UploadButton' class='Button btn btn-success'>تحميل</button>
                <button type='button' id='cancelButton' class='Button btn btn-warning none'>الغاء</button>
            </div>

        </div>
        <%}%>
        <% if(lesson.videos.length > 0 ){ %>

        <div class="cards">
            <% lesson.videos.forEach(v =>{ %>
            <div class="card">
                <input type="hidden" name="examId" value="<%= lesson._id%>" id="">
                <div class="card-body">

                    <img src="/images/videoIcon.jpg" class="card-img" alt="...">
                    <h2 class="card-title text-m">
                        <%= v.title %>
                    </h2>
                </div>
                <div class="card-actions">
                    <a class="btn btn-success watch-vid" data-vn="<%= v.title %>" data-vp="<%= v.path %>">فتح</a>
                    <a class="btn btn-danger" href="/teacher/videos/delete/<%= lesson._id %>?vidId=<%= v._id %>">حذف</a>
                </div>
            </div>
            <% }) %>
        </div>
        <% }else{ %>
        <%- include('../includes/fall-back.ejs') %>

        <% } %>
    </div>